import React from "react";
import { render } from "react-dom";
import "./app.css";
const styles = {
  fontFamily: "sans-serif",
  textAlign: "center"
};

const App = () => {
  const categoriesArray = ["weapon", "armor", "shield", "necklace", "ring"];
  const equipped = [
    {
      id: 25,
      category: "weapon"
    }
  ];
  // let itemCat = (category) = equipped.filter(item => item.category === category)

  return (
    <div style={styles}>
      <div>
        Example of Ideal Html version<br />
      </div>

      <div className="flex-container">
        <div className="equipped-item id_25" />
        <div className="equipped-item empty-slot armor" />
        <div className="equipped-item empty-slot shield" />
        <div className="equipped-item empty-slot necklace" />
        <div className="equipped-item empty-slot ring" />
      </div>
      <div>
        React Version<br />
      </div>

      <div className="flex-container">
        {categoriesArray.map(slot => {
          const matchingItem = equipped.find(item => item.category === slot);

          const itemClassname = matchingItem
            ? `id_${matchingItem.id}`
            : `empty-slot ${slot}`;
          const slotClassname = `equipped-item ${itemClassname}`;

          return <div className={slotClassname} />;
        })}
      </div>
    </div>
  );
};

render(<App />, document.getElementById("root"));
